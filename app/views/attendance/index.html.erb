<div class = "center-table col-lg-12">
  <div class = "table-container col-lg-5 ">
    <p class = "user-head">All Users</p>
  <table cellpadding="20" border-collapse>
    <tr class = "user-info">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
    </tr>


    <% @users.each do |user| %>
      <tr class = "user-info">
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>

  </table>
  </div>
  </div>