<div class="home-container">
  <% if !user_signed_in? %>
    <div class = "tagline">
      <h1>
        Fast and reliable time keeping and attendance system
      </h1>
      <button>Try it now</button>
    </div>

  <% else %>
    <div class = "center_logged">
      <div class = "time-logged">
        <p>Hello <%= current_user.firstname %> !</p>
        <%=t = Time.now
           t.strftime("Printed on %m/%d/%Y")   #=> "Printed on 04/09/2003"
           t.strftime("%I:%M %p")%>
      </div>
      <p>Logged In at:</p>
      <% if @last_log != nil %>
        <%= @last_log.loggin_in.strftime("%I:%M %p") %>
        <% else %>
      <p>Last log is Nil</p>
        <% end %>
      <div class = "the-button">
        <form action="/trackers/timeout" method="POST">
          <button type = 'submit' id = "loggin-button">Time Out</button>

        </form>
      </div>

        </div>
      <% end %>

      </div>
